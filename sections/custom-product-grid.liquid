{% comment %}
  Custom Product Grid Section
  This section creates a grid of 6 products with popup functionality
{% endcomment %}

<div class="custom-product-grid tisso-vision-grid" id="custom-grid-{{ section.id }}">
  <div class="grid-container">
    <div class="section-header">
      <h2 class="section-title">Tisso vision in the wild</h2>
    </div>
    
    <div class="products-grid">
      {% for block in section.blocks limit: 6 %}
        {% assign product = all_products[block.settings.product] %}
        {% if product != blank %}
          <div class="product-card modern-card" data-product-id="{{ product.id }}" data-block-id="{{ block.id }}">
            <div class="product-image-container">
              {% if product.featured_image %}
                <img src="{{ product.featured_image | img_url: '500x500' }}" alt="{{ product.title }}" loading="lazy" class="product-image">
              {% else %}
                <div class="no-image-placeholder">
                  <svg width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                    <circle cx="8.5" cy="8.5" r="1.5"/>
                    <polyline points="21,15 16,10 5,21"/>
                  </svg>
                </div>
              {% endif %}
            </div>
            
            <div class="product-info">
              <h3 class="product-title">{{ product.title }}</h3>
              <div class="product-price">
                {% if product.compare_at_price > product.price %}
                  <span class="price-sale">{{ product.price | money }}</span>
                  <span class="price-compare">{{ product.compare_at_price | money }}</span>
                {% else %}
                  <span class="price-regular">{{ product.price | money }}</span>
                {% endif %}
              </div>
              <p class="product-description">
                {% if product.description != blank %}
                  {{ product.description | strip_html | truncate: 60 }}
                {% else %}
                  This one-piece swimsuit is crafted from jersey featuring an allover micro Monogram motif in relief.
                {% endif %}
              </p>
              
              <!-- Color Options -->
              <div class="color-options">
                <span class="color-label">Color</span>
                <div class="color-swatches">
                  <div class="color-swatch active" data-color="White" style="background: #fff; border: 1px solid #ddd;"></div>
                  <div class="color-swatch" data-color="Black" style="background: #000;"></div>
                </div>
              </div>
              
              <!-- Size Selection -->
              <div class="size-selection">
                <label for="size-{{ product.id }}">Size</label>
                <select id="size-{{ product.id }}" class="size-select">
                  <option>Choose your size</option>
                  <option>XS</option>
                  <option>S</option>
                  <option>M</option>
                  <option>L</option>
                  <option>XL</option>
                </select>
              </div>
              
              <button class="shop-now-btn" onclick="openProductPopup('{{ product.id }}', '{{ block.id }}')">
                SHOP NOW →
              </button>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<!-- Product Popup Modal -->
<div id="product-popup" class="popup-overlay" style="display: none;">
  <div class="popup-content">
    <button class="popup-close" onclick="closeProductPopup()">&times;</button>
    <div class="popup-body">
      <div class="popup-image">
        <img id="popup-product-image" src="" alt="">
      </div>
      <div class="popup-details">
        <h2 id="popup-product-title"></h2>
        <div id="popup-product-price" class="popup-price"></div>
        <div id="popup-product-description" class="popup-description"></div>
        
        <form id="popup-product-form" class="popup-form">
          <!-- Color Selection -->
          <div class="popup-color-selection">
            <span class="popup-color-label">Color</span>
            <div class="popup-color-options">
              <div class="popup-color-swatch active" data-color="White" style="background: #fff; border: 1px solid #ddd;"></div>
              <div class="popup-color-swatch" data-color="Black" style="background: #000;"></div>
            </div>
          </div>
          
          <!-- Size Selection -->
          <div class="popup-size-selection">
            <label for="popup-size">Size</label>
            <select id="popup-size" class="popup-size-select">
              <option>Choose your size</option>
              <option>XS</option>
              <option>S</option>
              <option>M</option>
              <option>L</option>
              <option>XL</option>
            </select>
          </div>
          
          <button type="submit" class="popup-add-to-cart">ADD TO CART →</button>
        </form>
      </div>
    </div>
  </div>
</div>

