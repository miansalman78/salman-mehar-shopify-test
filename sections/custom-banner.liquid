{% comment %}
  Custom Banner Section
  This section creates a banner with editable text and animated buttons
{% endcomment %}

<div class="custom-banner tisso-vision-banner" id="custom-banner-{{ section.id }}">
  <div class="banner-container">
    <!-- Brand Header -->
    <div class="brand-header">
      <div class="hamburger-menu">
        <span></span>
        <span></span>
        <span></span>
      </div>
      <h2 class="brand-name">TISSO VISION</h2>
      <div class="header-right">
        <span class="find-gift-text">Find the ideal gift for your loved ones.</span>
        <button class="choose-gift-btn">CHOOSE GIFT →</button>
      </div>
    </div>
    
    <!-- Gift Guide Section -->
    <div class="gift-guide-section">
      <div class="gift-guide-content">
        <h1 class="gift-guide-title">The Gift Guide</h1>
        <p class="gift-guide-subtitle">
          {% if section.settings.description != blank %}
            {{ section.settings.description }}
          {% else %}
            Discover Joy. Your Ultimate Holiday Gift Destination.<br>
            Explore our curated selection and find the perfect gifts to<br>
            delight your loved ones this holiday season.
          {% endif %}
        </p>
        
        {% if section.settings.button_text != blank %}
          <button class="shop-now-btn" onclick="window.location.href='{{ section.settings.button_link }}'">
            {{ section.settings.button_text }} →
          </button>
        {% endif %}
        
        <p class="sustainability-text">SUSTAINABLE. ETHICALLY MADE CLOTHING IN SIZES XS TO 6X.</p>
      </div>
      
      <!-- Illustrated Elements -->
      <div class="illustrated-elements">
        <div class="illustration-grid">
          <!-- Camera -->
          <div class="illustration-item camera">
            <svg viewBox="0 0 100 80" fill="none" stroke="#333" stroke-width="1.5">
              <rect x="10" y="20" width="80" height="50" rx="5"/>
              <circle cx="50" cy="45" r="15"/>
              <circle cx="50" cy="45" r="8"/>
              <rect x="65" y="25" width="8" height="5" rx="2"/>
              <path d="M30 20 L35 10 L65 10 L70 20"/>
            </svg>
          </div>
          
          <!-- Watch -->
          <div class="illustration-item watch">
            <svg viewBox="0 0 60 80" fill="none" stroke="#333" stroke-width="1.5">
              <rect x="15" y="25" width="30" height="30" rx="15"/>
              <path d="M20 15 L40 15 L35 25 L25 25 Z"/>
              <path d="M20 65 L40 65 L35 55 L25 55 Z"/>
              <circle cx="30" cy="40" r="2"/>
              <path d="M30 30 L30 40 L35 45"/>
            </svg>
          </div>
          
          <!-- Sunglasses -->
          <div class="illustration-item sunglasses">
            <svg viewBox="0 0 100 40" fill="none" stroke="#333" stroke-width="1.5">
              <circle cx="25" cy="20" r="15"/>
              <circle cx="75" cy="20" r="15"/>
              <path d="M40 20 L60 20"/>
              <path d="M10 15 L5 10"/>
              <path d="M90 15 L95 10"/>
            </svg>
          </div>
          
          <!-- Notebook -->
          <div class="illustration-item notebook">
            <svg viewBox="0 0 60 80" fill="none" stroke="#333" stroke-width="1.5">
              <rect x="10" y="10" width="40" height="60" rx="2"/>
              <path d="M10 25 L50 25"/>
              <path d="M10 35 L50 35"/>
              <path d="M10 45 L50 45"/>
              <circle cx="15" cy="15" r="2"/>
            </svg>
          </div>
          
          <!-- Compass -->
          <div class="illustration-item compass">
            <svg viewBox="0 0 60 60" fill="none" stroke="#333" stroke-width="1.5">
              <circle cx="30" cy="30" r="25"/>
              <path d="M30 10 L35 25 L30 30 L25 25 Z" fill="#333"/>
              <path d="M30 50 L25 35 L30 30 L35 35 Z"/>
              <circle cx="30" cy="30" r="3"/>
            </svg>
          </div>
          
          <!-- Pen -->
          <div class="illustration-item pen">
            <svg viewBox="0 0 80 20" fill="none" stroke="#333" stroke-width="1.5">
              <rect x="10" y="8" width="60" height="4" rx="2"/>
              <path d="M70 8 L75 6 L75 14 L70 12"/>
              <circle cx="15" cy="10" r="3"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .tisso-vision-banner {
    background: #FFD700;
    min-height: 600px;
    padding: 0;
    position: relative;
    overflow: hidden;
    border: 3px solid #333;
  }
  
  .banner-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 30px;
    height: 100%;
  }
  
  .brand-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 50px;
    padding: 0;
  }
  
  .hamburger-menu {
    display: flex;
    flex-direction: column;
    gap: 4px;
    margin-right: 20px;
    cursor: pointer;
  }
  
  .hamburger-menu span {
    width: 25px;
    height: 3px;
    background: #333;
    border-radius: 0;
    transition: all 0.3s ease;
  }
  
  .brand-name {
    font-size: 24px;
    font-weight: 700;
    color: #333;
    margin: 0;
    letter-spacing: 2px;
    flex: 1;
  }
  
  .header-right {
    display: flex;
    align-items: center;
    gap: 20px;
  }
  
  .find-gift-text {
    font-size: 14px;
    color: #333;
    font-weight: 500;
  }
  
  .choose-gift-btn {
    background: #FFD700;
    color: #333;
    border: 2px solid #333;
    padding: 8px 16px;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    border-radius: 0;
    transition: all 0.3s ease;
  }
  
  .choose-gift-btn:hover {
    background: #333;
    color: #FFD700;
  }
  
  .gift-guide-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
    min-height: 450px;
  }
  
  .gift-guide-content {
    padding: 0;
  }
  
  .gift-guide-title {
    font-size: 72px;
    font-weight: 800;
    color: #333;
    margin: 0 0 30px 0;
    line-height: 0.9;
    font-family: 'Arial', sans-serif;
  }
  
  .gift-guide-subtitle {
    font-size: 16px;
    color: #333;
    line-height: 1.5;
    margin: 0 0 40px 0;
    max-width: 500px;
    font-weight: 400;
  }
  
  .shop-now-btn {
    background: #333;
    color: #FFD700;
    border: none;
    padding: 15px 30px;
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    border-radius: 0;
    transition: all 0.3s ease;
    margin-bottom: 30px;
    display: inline-block;
  }
  
  .shop-now-btn:hover {
    background: #555;
    transform: translateY(-2px);
  }
  
  .sustainability-text {
    font-size: 11px;
    color: #333;
    font-weight: 500;
    letter-spacing: 0.5px;
    margin: 0;
    opacity: 0.8;
  }
  
  .illustrated-elements {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    position: relative;
  }
  
  .illustration-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(3, 1fr);
    gap: 20px;
    width: 100%;
    height: 400px;
    opacity: 0.6;
  }
  
  .illustration-item {
    display: flex;
    justify-content: center;
    align-items: center;
    transition: all 0.3s ease;
  }
  
  .illustration-item svg {
    width: 60px;
    height: 60px;
    stroke: #333;
    stroke-width: 1.5;
  }
  
  .illustration-item.camera {
    grid-column: 1;
    grid-row: 1;
  }
  
  .illustration-item.watch {
    grid-column: 2;
    grid-row: 1;
  }
  
  .illustration-item.sunglasses {
    grid-column: 3;
    grid-row: 1;
  }
  
  .illustration-item.notebook {
    grid-column: 4;
    grid-row: 2;
  }
  
  .illustration-item.compass {
    grid-column: 2;
    grid-row: 3;
  }
  
  .illustration-item.pen {
    grid-column: 3;
    grid-row: 3;
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .gift-guide-section {
      grid-template-columns: 1fr;
      gap: 30px;
      text-align: center;
    }
    
    .gift-guide-title {
      font-size: 36px;
    }
    
    .brand-name {
      font-size: 20px;
    }
    
    .decorative-elements {
      order: -1;
    }
    
    .gift-icons {
      grid-template-columns: repeat(3, 1fr);
      gap: 20px;
    }
    
    .icon-item {
      width: 60px;
      height: 60px;
    }
  }
  
  .banner-content {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .banner-heading {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 1rem;
    line-height: 1.2;
  }
  
  .banner-subheading {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    opacity: 0.9;
  }
  
  .banner-description {
    font-size: 1.1rem;
    margin-bottom: 2rem;
    opacity: 0.8;
    line-height: 1.6;
  }
  
  .banner-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .banner-btn {
    padding: 12px 30px;
    border: none;
    border-radius: 25px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
  }
  
  .primary-btn {
    background: #ff6b6b;
    color: white;
  }
  
  .secondary-btn {
    background: transparent;
    color: white;
    border: 2px solid white;
  }
  
  .animated-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
  }
  
  .primary-btn:hover {
    background: #ff5252;
  }
  
  .secondary-btn:hover {
    background: white;
    color: #667eea;
  }
  
  /* Mobile Responsive */
  @media (max-width: 768px) {
    .custom-banner {
      padding: 60px 15px;
    }
    
    .banner-heading {
      font-size: 2rem;
    }
    
    .banner-subheading {
      font-size: 1.2rem;
    }
    
    .banner-buttons {
      flex-direction: column;
      align-items: center;
    }
    
    .banner-btn {
      width: 100%;
      max-width: 250px;
    }
  }
</style>

{% schema %}
{
  "name": "Custom Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover amazing products"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Explore our curated selection and find the perfect gifts for your loved ones."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Primary Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Primary Button Link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link",
      "default": "/pages/about"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}