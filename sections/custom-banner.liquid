{% comment %}
  Custom Banner Section
  This section creates a banner with editable text and animated buttons
{% endcomment %}

<div class="custom-banner tisso-vision-banner" id="custom-banner-{{ section.id }}">
  <div class="banner-container">
    <!-- Brand Header -->
    <div class="brand-header">
      <div class="hamburger-menu">
        <span></span>
        <span></span>
        <span></span>
      </div>
      <h2 class="brand-name">TISSO VISION</h2>
    </div>
    
    <!-- Gift Guide Section -->
    <div class="gift-guide-section">
      <div class="gift-guide-content">
        <h1 class="gift-guide-title">The Gift Guide</h1>
        <p class="gift-guide-subtitle">
          {% if section.settings.description != blank %}
            {{ section.settings.description }}
          {% else %}
            Explore our curated selection and find the perfect gifts to delight your loved ones with thoughtful presents.
          {% endif %}
        </p>
        
        {% if section.settings.button_text != blank %}
          <button class="shop-now-btn" onclick="window.location.href='{{ section.settings.button_link }}'">
            {{ section.settings.button_text }}
          </button>
        {% endif %}
      </div>
      
      <!-- Decorative Elements -->
      <div class="decorative-elements">
        <div class="gift-icons">
          <div class="icon-item">
            <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <rect x="3" y="8" width="18" height="4" rx="1"/>
              <path d="m12 8-2-4h4l-2 4"/>
              <path d="M8 12v9a2 2 0 0 0 2 2h4a2 2 0 0 0 2-2v-9"/>
            </svg>
          </div>
          <div class="icon-item">
            <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <circle cx="12" cy="12" r="10"/>
              <polyline points="12,6 12,12 16,14"/>
            </svg>
          </div>
          <div class="icon-item">
            <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .tisso-vision-banner {
    background: #f8f9fa;
    min-height: 500px;
    padding: 0;
    position: relative;
    overflow: hidden;
  }
  
  .banner-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }
  
  .brand-header {
    display: flex;
    align-items: center;
    margin-bottom: 40px;
    padding: 20px 0;
  }
  
  .hamburger-menu {
    display: flex;
    flex-direction: column;
    gap: 4px;
    margin-right: 20px;
    cursor: pointer;
  }
  
  .hamburger-menu span {
    width: 25px;
    height: 3px;
    background: #333;
    border-radius: 2px;
    transition: all 0.3s ease;
  }
  
  .brand-name {
    font-size: 24px;
    font-weight: 700;
    color: #333;
    margin: 0;
    letter-spacing: 2px;
  }
  
  .gift-guide-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    min-height: 400px;
  }
  
  .gift-guide-content {
    padding: 40px 0;
  }
  
  .gift-guide-title {
    font-size: 48px;
    font-weight: 800;
    color: #333;
    margin: 0 0 20px 0;
    line-height: 1.2;
  }
  
  .gift-guide-subtitle {
    font-size: 16px;
    color: #666;
    line-height: 1.6;
    margin: 0 0 30px 0;
    max-width: 400px;
  }
  
  .shop-now-btn {
    background: #333;
    color: white;
    border: none;
    padding: 15px 30px;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    border-radius: 0;
    transition: all 0.3s ease;
  }
  
  .shop-now-btn:hover {
    background: #555;
    transform: translateY(-2px);
  }
  
  .decorative-elements {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
  }
  
  .gift-icons {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    opacity: 0.1;
  }
  
  .icon-item {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 80px;
    height: 80px;
    border: 2px solid #333;
    border-radius: 50%;
  }
  
  .icon-item svg {
    color: #333;
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .gift-guide-section {
      grid-template-columns: 1fr;
      gap: 30px;
      text-align: center;
    }
    
    .gift-guide-title {
      font-size: 36px;
    }
    
    .brand-name {
      font-size: 20px;
    }
    
    .decorative-elements {
      order: -1;
    }
    
    .gift-icons {
      grid-template-columns: repeat(3, 1fr);
      gap: 20px;
    }
    
    .icon-item {
      width: 60px;
      height: 60px;
    }
  }
  
  .banner-content {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .banner-heading {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 1rem;
    line-height: 1.2;
  }
  
  .banner-subheading {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    opacity: 0.9;
  }
  
  .banner-description {
    font-size: 1.1rem;
    margin-bottom: 2rem;
    opacity: 0.8;
    line-height: 1.6;
  }
  
  .banner-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .banner-btn {
    padding: 12px 30px;
    border: none;
    border-radius: 25px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
  }
  
  .primary-btn {
    background: #ff6b6b;
    color: white;
  }
  
  .secondary-btn {
    background: transparent;
    color: white;
    border: 2px solid white;
  }
  
  .animated-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
  }
  
  .primary-btn:hover {
    background: #ff5252;
  }
  
  .secondary-btn:hover {
    background: white;
    color: #667eea;
  }
  
  /* Mobile Responsive */
  @media (max-width: 768px) {
    .custom-banner {
      padding: 60px 15px;
    }
    
    .banner-heading {
      font-size: 2rem;
    }
    
    .banner-subheading {
      font-size: 1.2rem;
    }
    
    .banner-buttons {
      flex-direction: column;
      align-items: center;
    }
    
    .banner-btn {
      width: 100%;
      max-width: 250px;
    }
  }
</style>

{% schema %}
{
  "name": "Custom Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover amazing products"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Explore our curated selection and find the perfect gifts for your loved ones."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Primary Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Primary Button Link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link",
      "default": "/pages/about"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}